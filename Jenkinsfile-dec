pipeline {
    // agent { label 'slave-1' } test from 
    agent any
    tools {maven 'mvn398'}

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Check if this is a PR build or normal branch build
                    if (env.ghprbPullId) {
                        echo "This is a Pull Request build - PR #${env.ghprbPullId}"
                        echo "Source Branch: ${env.ghprbSourceBranch}"
                        echo "Target Branch: ${env.ghprbTargetBranch}"
                    } else {
                        echo "This is a normal branch build"
                        echo "Branch: ${env.BRANCH_NAME ?: env.GIT_BRANCH}"
                    }
                }
                checkout scm
            }
        }
        
        stage('build') {
            steps {
                echo "this is build stage"
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('test') {
            steps {
                echo "this is test stage"
                sh 'mvn test'
            }
        }

        stage('run') {
            steps {
                echo "this is run stage"
                sh 'java -jar target/my-app-1.0-SNAPSHOT.jar'
            }
        }
    }

    post {
        success {
            slackSend (
                channel: '#aws-jenkins',
                message: "Build Success - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)",
                teamDomain: 'jenkinstest-xxj7763',
                tokenCredentialId: 'slack-notificate'
            )
        }
        failure {
            slackSend (
                channel: '#aws-jenkins',
                message: "Build Failed - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)",
                teamDomain: 'jenkinstest-xxj7763',
                tokenCredentialId: 'slack-notificate'
            )
        }
    }
}



// this to configure merge with main in pipeline

// https://github.com/your-username/your-repo.git
// ```

// **Credentials:** Select your GitHub credentials

// **Click "Advanced" under Repository**, then add:

// **Refspec:**
// ```
// +refs/pull/${ghprbPullId}/*:refs/remotes/origin/pr/${ghprbPullId}/*
// ```

// **Branches to build - Branch Specifier:**
// ```
// origin/pr/${ghprbPullId}/merge

// GitHub Pull Request Builder Section:
// Make sure these are set:

// ✅ Use github hooks for build triggering - Checked
// ✅ Build every pull request automatically - Checked

// Whitelist Target Branches: (if you only want to test PRs to main)

